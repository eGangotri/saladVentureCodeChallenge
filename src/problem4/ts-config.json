{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2016",
        "typeRoots": [
            "node_modules/@types/",
            "typings/index.d.ts"
        ],
        "lib":["es6","dom"]
    },
    "files": [
      "retrieve-holders.ts"
    ],
    "include": ["src/**/*"],

    "exclude": [
        "node_modules",
        "**/*-aot.ts"
    ]
}